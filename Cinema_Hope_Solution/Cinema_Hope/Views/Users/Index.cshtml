@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "‘Users";
    Layout = "_Layout";
}

<h1>Users</h1>
<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            @* <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>                    @* if true                   :    if false   *@
                <td>@(user.Roles != null ? string.Join(" , " , user.Roles.ToList() ) : "No Roles" )</td>
                @* <td><a class="btn btn-primary" asp-action="ManageRoles" asp-controller="Users" asp-route-userId="@user.Id">Manage Roles</a></td> *@
            </tr>
        }
    </tbody>
</table>