@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No movies!</h4>
        <p class="mb-0">No movies were added yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var movie in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card border-success mb-3 text-decoration-none" asp-controller="Movies" asp-action="Details" asp-route-id="@movie.MovieId">
                    <div class="card-body" style="background-image: url(@($"{FileSettings.ImagesPath}/{movie.PosterUrl}")); background-size: cover; background-position: center; height: 500px;">
                        <div class="d-flex align-items-end h-100">
                            <span class="badge bg-secondary rounded-0 fs-3">@movie.Genre?.Name</span>
                        </div>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h5>@movie.Title</h5>
                        <div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}