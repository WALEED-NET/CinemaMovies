@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="card border-success rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Title</h1>
                    <span class="badge bg-info fs-5 mb-4">@Model.Genre?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div>
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.PosterUrl}")" alt="@Model.Title" class="w-100" />
            </div>
        </div>
    </div>
</div>