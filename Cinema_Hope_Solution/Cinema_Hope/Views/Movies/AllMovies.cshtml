    <div class="custom container">
        <form id="filter-form" action="/Movies/AllMovies" method="get">
            <!-- Sorting options -->
            <div class="right">
                <label for="choose">Sorting</label>
                <select name="sort" id="choose">
                    <option value="new">New</option>
                    <option value="old">Old</option>
                </select>
                <label for="choose2">Display</label>
                <select name="display" id="choose2">
                    <option value="asc">Ascending</option>
                    <option value="desc">Descending</option>
                </select>
                <button type="submit">Apply</button>
            </div>

            <!-- Filtering options -->
            <i class="fa-solid fa-filter filter-icon"
                onclick="document.querySelector('.filter').classList.toggle('filter2')"></i>
        </form>
    </div>
